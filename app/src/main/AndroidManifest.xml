<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
    </queries>

    <application
        android:name="com.musicslayer.cashmaster.app.App"
        android:label="@string/app_title"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTheme.Monochrome"
        android:icon="@mipmap/app_icon"
        android:roundIcon="@mipmap/app_icon_round"
        android:hasFragileUserData="true"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules"
        tools:targetApi="s">

        <provider
            android:name="com.musicslayer.cashmaster.provider.CachedFileProvider"
            android:authorities="com.musicslayer.cashmaster.provider"
            android:exported="false"
            android:grantUriPermissions="true">
        </provider>

        <activity android:name=".activity.InitialActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
    </application>
</manifest>