<resources>
    <!-- Earth Theme -->
    <style name="Theme.CashMaster.Earth" parent="Theme.CashMaster">
        <item name="theme_background">@color/earth_background</item>
        <item name="theme_feature">@color/earth_feature</item>
        <item name="theme_feature_faded">@color/earth_feature_faded</item>
        <item name="theme_red">@color/earth_red</item>
    </style>

    <!-- Forest Theme -->
    <style name="Theme.CashMaster.Forest" parent="Theme.CashMaster">
        <item name="theme_background">@color/forest_background</item>
        <item name="theme_feature">@color/forest_feature</item>
        <item name="theme_feature_faded">@color/forest_feature_faded</item>
        <item name="theme_red">@color/forest_red</item>
    </style>

    <!-- Mint Theme -->
    <style name="Theme.CashMaster.Mint" parent="Theme.CashMaster">
        <item name="theme_background">@color/mint_background</item>
        <item name="theme_feature">@color/mint_feature</item>
        <item name="theme_feature_faded">@color/mint_feature_faded</item>
        <item name="theme_red">@color/mint_red</item>
    </style>

    <!-- Monochrome Theme -->
    <style name="Theme.CashMaster.Monochrome" parent="Theme.CashMaster">
        <item name="theme_background">@color/monochrome_background</item>
        <item name="theme_feature">@color/monochrome_feature</item>
        <item name="theme_feature_faded">@color/monochrome_feature_faded</item>
        <item name="theme_red">@color/monochrome_red</item>
    </style>

    <!-- Neon Theme -->
    <style name="Theme.CashMaster.Neon" parent="Theme.CashMaster">
        <item name="theme_background">@color/neon_background</item>
        <item name="theme_feature">@color/neon_feature</item>
        <item name="theme_feature_faded">@color/neon_feature_faded</item>
        <item name="theme_red">@color/neon_red</item>
    </style>

    <!-- Sky Theme -->
    <style name="Theme.CashMaster.Sky" parent="Theme.CashMaster">
        <item name="theme_background">@color/sky_background</item>
        <item name="theme_feature">@color/sky_feature</item>
        <item name="theme_feature_faded">@color/sky_feature_faded</item>
        <item name="theme_red">@color/sky_red</item>
    </style>

    <!-- Sunset Theme -->
    <style name="Theme.CashMaster.Sunset" parent="Theme.CashMaster">
        <item name="theme_background">@color/sunset_background</item>
        <item name="theme_feature">@color/sunset_feature</item>
        <item name="theme_feature_faded">@color/sunset_feature_faded</item>
        <item name="theme_red">@color/sunset_red</item>
    </style>

    <!-- Base Theme -->
    <style name="Theme.CashMaster" parent="Theme.MaterialComponents">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">?attr/theme_background</item>
        <item name="colorPrimaryVariant">?attr/theme_feature</item>
        <item name="colorPrimaryDark">?attr/theme_background</item>
        <item name="colorOnPrimary">?attr/theme_background</item>

        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">?attr/theme_feature</item>
        <item name="colorSecondaryVariant">?attr/theme_feature</item>
        <item name="colorOnSecondary">?attr/theme_background</item>

        <!-- View Themes -->
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="checkboxStyle">@style/CheckBoxTheme</item>
        <!-- <item name="editTextStyle">@style/EditTextTheme</item> Doesn't have any effect -->
        <item name="imageButtonStyle">@style/ImageButtonTheme</item>
        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>

        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:itemTextAppearance">@style/ItemTextTheme</item>
        <item name="android:textViewStyle">@style/TextViewTheme</item>

        <!-- Other -->
        <item name="singleLine">true</item>
        <item name="subtitleTextColor">?attr/theme_feature</item>
        <item name="titleTextColor">?attr/theme_feature</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fadeScrollbars">false</item>
        <item name="android:freezesText">true</item>
        <item name="android:itemBackground">@drawable/border_tight</item>
        <item name="android:navigationBarColor">?attr/theme_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">?attr/theme_feature</item>
        <item name="android:textColorSecondary">?attr/theme_feature</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">?attr/theme_background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
        <item name="strokeColor">?attr/theme_feature</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/border_round_thick</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
    </style>

    <style name="CheckBoxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColorPrimary">?attr/theme_feature</item>
        <item name="android:textColorSecondary">?attr/theme_feature</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>

        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="checkboxStyle">@style/CheckBoxTheme</item>
        <item name="imageButtonStyle">@style/ImageButtonTheme</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>

        <item name="android:textViewStyle">@style/TextViewTheme</item>
    </style>

    <style name="EditTextTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">?attr/theme_feature_faded</item>
    </style>

    <style name="ImageButtonTheme" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
        <item name="strokeColor">?attr/theme_feature</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
    </style>

    <style name="ItemTextTheme" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
    </style>

    <style name="MaterialButtonTheme" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
        <item name="strokeColor">?attr/theme_feature</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="PopupMenuTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?attr/theme_background</item>
    </style>

    <style name="RadioButtonTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">?attr/theme_feature</item>
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
    </style>

    <style name="TextViewTheme" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/theme_feature</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
        <item name="subtitleTextAppearance">@style/ToolbarTheme.Subtitle</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">?attr/theme_feature</item>
    </style>

    <style name="ToolbarTheme.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textSize">@dimen/font_size_subtitle</item>
        <item name="android:textColor">?attr/theme_feature</item>
    </style>
</resources>